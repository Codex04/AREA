<UserControl x:Class="ServerMonitorApplication.ServiceItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServerMonitorApplication"
             mc:Ignorable="d" 
             Height="70"
             d:DesignHeight="70" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:ServiceItemControlViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <Style x:Key="ContentStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Grid x:Name="container" Background="White">
                            <StackPanel Orientation="Horizontal">
                                <!-- Service state (active or not) -->
                                <Button Style="{StaticResource ItemButton}"  Content="{Binding Label}"  Grid.Column="1" Width="50" Margin="10"/>
                                <TextBlock Grid.Column="2" Text="{Binding ServiceName}" FontFamily="{StaticResource LatoRegular}" FontSize="{StaticResource FontSizeRegular}" Foreground="{StaticResource WordDarkBlueBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="{StaticResource WordVeryLightBlue}" Duration="0:0:0.3" Storyboard.TargetName="container" Storyboard.TargetProperty="Background.Color" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="White" Duration="0:0:0.3" Storyboard.TargetName="container" Storyboard.TargetProperty="Background.Color" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" TargetName="container" Value="{StaticResource ForegroundDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ContentControl d:DataContext="{x:Static local:ServiceItemControlModel.Instance}"
                    Style="{StaticResource ContentStyle}"/>

</UserControl>
