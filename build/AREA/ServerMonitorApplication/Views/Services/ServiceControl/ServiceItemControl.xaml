<UserControl x:Class="ServerMonitorApplication.ServiceItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServerMonitorApplication"
             mc:Ignorable="d" 
             Height="70"
             d:DesignHeight="70" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:ServiceItemControlViewModel, IsDesignTimeCreatable=True}">

    <Grid d:DataContext="{x:Static local:ServiceItemControlModel.Instance}" Background="{StaticResource BackgroundVeryLightBrush}">
        <StackPanel Orientation="Horizontal">
            <!-- Service state ( active or not) -->
            <Button Style="{StaticResource ItemButton}"  Content="{Binding Label}"  Grid.Column="1" Width="50" Margin="10" Background="Red"/>
            <TextBlock Grid.Column="2" Text="{Binding ServiceName}" FontFamily="{StaticResource LatoRegular}" FontSize="{StaticResource FontSizeLarge}" Foreground="{StaticResource WordBlueBrush}" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>

</UserControl>
