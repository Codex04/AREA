<UserControl x:Class="ServerMonitorApplication.ServicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServerMonitorApplication"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="700"
             d:DataContext="{d:DesignInstance local:ServicesViewModel, IsDesignTimeCreatable=True}">

    <!-- Main background -->
    <Border Background="{StaticResource ForegroundLightBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Content UserControl -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Top Menu -->
                <Grid Height="80" Background="{StaticResource WordDarkBlueBrush}">
                    <!-- Header -->
                    <TextBlock Text="Services" FontFamily="{StaticResource LatoBold}" FontSize="{StaticResource FontSizeLarge}" Foreground="{StaticResource ForegroundLightBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <!-- Services list -->
                
            </Grid>
            <!-- Drop shadow -->
            <Border Grid.Column="1" Width="1" BorderThickness="1 0 0 0">
                <!-- Line -->
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="{StaticResource WordBlue}" Offset="0.0"/>
                        <GradientStop Color="{StaticResource ForegroundDark}" Offset="0.5"/>
                        <GradientStop Color="{StaticResource WordBlue}" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
            </Border>
            <!-- Content Logger -->
            <Grid Grid.Column="2" Background="{StaticResource WordBlueBrush}">
                <ListView Foreground="Black">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding ServerMessages}" Header="Name" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </Border>

</UserControl>
