<UserControl x:Class="ServerMonitorApplication.ServiceLoggerItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServerMonitorApplication"
             mc:Ignorable="d" 
             d:DesignWidth="300">

    <Border d:DataContext="{x:Static local:ServiceLoggerItemControlModel.Instance}" Padding="15">
        <Grid>
            <!-- Username box -->
            <Border CornerRadius="10"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Height="Auto"
                    Width="Auto"
                    Background="{StaticResource WordOrangeBrush}"
                    BorderBrush="{StaticResource ForegroundLightBrush}"
                    BorderThickness="1"
                    Padding="8 1 8 3">
                <TextBlock Text="{Binding Username}" Foreground="{StaticResource ForegroundLightBrush}" FontSize="18" FontFamily="{StaticResource LatoRegular}"/>
            </Border>
            <Grid Margin="13 22 0 0" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Log bubble -->
                <Border CornerRadius="10"
                        Padding="9"
                        HorizontalAlignment="Left"
                        Background="{StaticResource ForegroundLightBrush}">
                    <!-- Log informations -->
                    <TextBlock Style="{StaticResource BubbleText}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               FontFamily="{StaticResource LatoRegular}"
                               FontSize="18"
                               Foreground="{StaticResource WordDarkBlueBrush}"
                               Text="{Binding Content}"/>
                </Border>
                <!-- Log Time Information -->
                <TextBlock Grid.Row="2"
                           Text="{Binding Time}"
                           HorizontalAlignment="Right"
                           Foreground="{StaticResource ForegroundLightBrush}"
                           FontSize="{StaticResource FontSizeSmall}"/>
            </Grid>
        </Grid>
    </Border>
    
</UserControl>
