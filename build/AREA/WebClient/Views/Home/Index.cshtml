@using WebClient.Models;
@using System.Security.Claims;

@model IndexViewModel

@{
    ViewBag.Title = "Index";
}

<div class="mainContainer">
    <aside class="sidebar">
        <menu class="profileActions">
            @{
                if (Request.IsAuthenticated)
                {
                    var claimId = User.Identity as ClaimsIdentity;
                    if (claimId != null)
                    {
                        <p class="profileName">@claimId.FindFirst(ClaimTypes.NameIdentifier).Value</p>
                    }
                }
                <div class="logoutLabelContainer"><span class="logoutLabel"><i class="fa fa-sign-out" aria-hidden="true"></i> <span>@Html.ActionLink("Logout", "Logout", "Auth", null, new { @class = "logoutLabel" })</span></span></div>
            }
        </menu>
        <section class="sidebarItemsContainer">
            @for (int i = 0; i < @Model.Areas.Count; i++)
            {
                <div class="@(Model.Areas[i].IsSelected == false ? "sidebarItem" : "sidebarItem selectedItem")" id="sidebarItem@(i)">
                    <p>@Model.Areas[i].Name</p>
                </div>
            }
        </section>
    </aside>
    <section class="canvasContainer">
        <canvas class="mainCanvas"></canvas>
    </section>
</div>
